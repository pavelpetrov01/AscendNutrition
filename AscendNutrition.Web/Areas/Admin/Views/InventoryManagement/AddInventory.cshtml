@using Microsoft.AspNetCore.Mvc.TagHelpers
@model AscendNutrition.Web.ViewModels.AdminArea.InventoryManagement.AddInventoryViewModel

@{
    ViewData["Title"] = "Add Inventory";
}

<h1>Add Inventory</h1>

<form asp-action="AddInventory" method="post">
    @Html.AntiForgeryToken()
    <div class="form-group mb-4">

        <label asp-for="Name" class="control-label">Inventory Name</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Add</button>
</form>

<a asp-action="Index" class="btn btn-secondary mt-3">Back to List</a>