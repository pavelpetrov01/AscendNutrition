@model AscendNutrition.Web.ViewModels.Product.DeleteViewModel

@{
    ViewData["Title"] = "Delete Product";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h4>Confirm Deletion</h4>
                </div>
                <div class="card-body">
                    <p class="lead">
                        Are you sure you want to delete the product
                        <strong>@Model.Name</strong>?
                    </p>
                    <p><strong>Price:</strong>@Model.Price.ToString("C")</p>
                    @if (!string.IsNullOrEmpty(@Model.ImageUrl))
                    {
                        if (@Model.ImageUrl.Contains("http"))
                        {
                            <img src=" @Model.ImageUrl" alt="@Model.Name" class="img-fluid" style="max-width: 100px; height: 100px; object-fit: cover" />
                        }
                        else
                        {
                            <img src="@Url.Content("~/" + @Model.ImageUrl)" alt="@Model.Name" class="img-fluid" style="max-width: 100px; height: 100px; object-fit: cover" />
                        }
                    }
                    else
                    {
                        <img src="@Url.Content("~/images/noimg.jpg")" alt="@Model.Name" class="img-fluid" style="max-width: 100px; height: 100px; object-fit: cover" />
                    }
                    <p class="text-muted mt-3">
                        Deleting this product will remove it from the system. This action cannot be undone.
                    </p>
                </div>
                <div class="card-footer d-flex justify-content-between">
                    <form asp-action="Delete" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="Id" />
                        <button type="submit" class="btn btn-danger">Yes, Delete</button>
                    </form>
                    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                </div>
            </div>
        </div>
    </div>
</div>