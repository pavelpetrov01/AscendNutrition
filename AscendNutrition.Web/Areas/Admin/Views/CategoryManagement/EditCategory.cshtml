@using Microsoft.AspNetCore.Mvc.TagHelpers
@model AscendNutrition.Web.ViewModels.AdminArea.CategoryManagement.EditCategoryViewModel

@{
    ViewData["Title"] = "Edit Category";
}

<div class="container mt-4">
    <h1 class="mb-4">@ViewData["Title"]</h1>

    <form method="post" asp-action="EditCategory" asp-controller="CategoryManagement">
        @Html.AntiForgeryToken()

        <input type="hidden" asp-for="Id" />

        <div class="form-group mb-3">
            <label asp-for="Name" class="form-label">Category Name</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-primary">Save Changes</button>
            <a asp-action="Index" asp-controller="CategoryManagement" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>