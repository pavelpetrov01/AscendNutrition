@using Microsoft.AspNetCore.Mvc.TagHelpers
@model AscendNutrition.Web.ViewModels.Product.AddReviewViewModel;

<div class="row mt-5">
    <div class="col-md-8">
        <h4>Add a Review</h4>
        <form asp-controller="Product" asp-action="AddReview" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="@Model.ProductId" />
            <div class="mb-3">
                <label asp-for="@Model.Comment" class="form-label">Your Review:</label>
                <input asp-for="@Model.Comment" class="form-control" rows="3" placeholder="Write your review here...">
                <span asp-validation-for="@Model.Comment" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Rating" class="form-label">Your Rating:</label>
                <select asp-for="@Model.Rating" class="form-select">
                    <option value="" disabled selected>Select a rating</option>
                    <option value="0">0 - Very Dissatisfied</option>
                    <option value="1">1 - Dissatisfied</option>
                    <option value="2">2 - Neutral</option>
                    <option value="3">3 - Satisfied</option>
                    <option value="4">4 - Very Satisfied</option>
                </select>
                <span asp-validation-for="@Model.Rating" class="text-danger"></span>
            </div>
            <div class="mb-2">
                <button type="submit" class="btn btn-success">Publish Review</button>
            </div>
        </form>
    </div>
</div>