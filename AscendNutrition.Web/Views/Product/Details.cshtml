@model AscendNutrition.Web.ViewModels.ProductDetailsViewModel;


<div class="container mt-5">
    <div class="row">
        <!-- Product Details Section -->
        <div class="col-md-8">

            <h2 class="mb-3"><u>@Model.Name</u></h2>
            <p><strong>Brand:</strong> @Model.Brand</p>
            <p><strong>Suitability:</strong> @Model.Suitability</p>
            @if (!String.IsNullOrWhiteSpace(Model.Size))
            {
                <p><strong>Size:</strong> @Model.Size</p>
            }
            
            <p><strong>Servings:</strong> @Model.Servings</p>
            <p><strong>Price:</strong> @Model.Price.ToString("C")</p>
            @if (Model.Flavor != null)
            {
                <p><strong>Flavor:</strong> @Model.Flavor</p>
            }
            
            @if (Model.Description != null)
            {
                <p><strong>Description:</strong> @Model.Description</p>
            }
            
            @if (User?.Identity?.IsAuthenticated == true)
            {
                <div class="mt-4">
                    <label for="quantity" class="form-label"><strong>Quantity:</strong></label>
                    <input type="number" id="quantity" name="quantity" class="form-control w-25 d-inline-block" min="1" value="1">
                    <button type="button" class="btn btn-primary ms-3">Buy</button>
                </div>
            }
           
        </div>
        <div class="col-md-4">
            @if (Model.ImageUrl != null)
            {
                <img src="@Url.Content("~/" + @Model.ImageUrl)" alt="Product Image" class="img-fluid" />
            }
            
        </div>
    </div>

    <!-- Review Section -->
    @if (User?.Identity?.IsAuthenticated == true)
    {
        <div class="row mt-5">
            <div class="col-md-8">
                <h4>Add a Review</h4>
                <textarea id="reviewBox" class="form-control" rows="3" placeholder="Write your review here..."></textarea>
                <button type="button" class="btn btn-success mt-3">Publish Review</button>
            </div>
        </div>
    }
    

    <!-- Published Reviews -->
   
</div>